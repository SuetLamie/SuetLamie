<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace属性值设置为对应的dao接口的全接口名 -->
<mapper namespace="linfei.dao.InfoManagementDao">
	<!-- sql语句 -->
	<!-- 指定唯一标示 id 与对应方法名相同
		 parameterType属性指定参数类型（全类名），如果多个参数就不用指定
		 resultType属性指定返回类型（全类名）
	 -->
	<insert id="insert" parameterType="InfoManagement">
		insert into InfoManagement(projectName,signTime,payment,contractNo,contractMonery,warrantyTime,Invoice) values(#{projectName},#{signTime},#{payment},#{contractNo},#{contractMonery},#{warrantyTime},#{Invoice});
	</insert>
	<delete id="delete" parameterType="Integer">
		delete from InfoManagement where id=#{id};
	</delete>
	<update id="updateById" parameterType="InfoManagement">
		update InfoManagement set projectName=#{projectName},signTime=#{signTime},payment=#{payment},contractNo=#{contractNo},contractMonery=#{contractMonery},warrantyTime=#{warrantyTime},Invoice=#{Invoice} where id=#{id};
	</update>
	<select id="selectAll" resultType="InfoManagement">
		select * from InfoManagement;
	</select>
</mapper>