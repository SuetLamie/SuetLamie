<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.surpass.mvc.system.bas.dao.AppResourcesConfigMapper">


	<select id="getAppResourcesConfigPageItem" resultType="string">
		select distinct(page) pageItem 
		FROM app_resources_config 
	</select>

	<!-- 查询信息 -->
	<select id="query" resultType="com.surpass.mvc.system.bas.model.AppResourcesConfig"
		parameterType="map">
		SELECT
		*
		FROM app_resources_config
		<where>
			<if test="appResourcesConfig.name != null and appResourcesConfig.name !='' ">
				and name like CONCAT('${appResourcesConfig.name}','%' )
			</if>
			<if test="appResourcesConfig.page != null and appResourcesConfig.page !='' ">
				and page = #{appResourcesConfig.page}
			</if>
			<if test="appResourcesConfig.status != null  and appResourcesConfig.status !='-1' ">
				and `status` = #{appResourcesConfig.status}
			</if>
		</where>
		ORDER BY level DESC
		LIMIT #{start}, #{limit}
	</select>

	<!-- 查询信息数据条数 -->
	<select id="total" resultType="Integer"
		parameterType="com.surpass.mvc.system.bas.model.AppResourcesConfig">
		select count(id)
		FROM app_resources_config
		<where>
			<if test="name != null and name !='' ">
				and name like CONCAT('${name}','%' )
			</if>
			<if test="page != null and page !='' ">
				and page = #{page}
			</if>
			<if test="status != null and status !='-1'  ">
				and `status` = #{status}
			</if>
		</where>
	</select>

	<delete id="deleteByKey" parameterType="java.lang.String">
		delete from
		app_resources_config where id in (${ids})
	</delete>

	<insert id="insert" parameterType="com.surpass.mvc.system.bas.model.AppResourcesConfig"
		useGeneratedKeys="true" keyProperty="id">
		insert into app_resources_config
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="name != null">
				name,
			</if>
			<if test="path != null">
				path,
			</if>
			<if test="level != null">
				level,
			</if>
			<if test="page != null">
				page,
			</if>
			status,
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="name != null">
				#{name,jdbcType=VARCHAR},
			</if>
			<if test="path != null">
				#{path,jdbcType=VARCHAR},
			</if>
			<if test="level != null">
				#{level,jdbcType=INTEGER},
			</if>
			<if test="page != null">
				#{page,jdbcType=VARCHAR},
			</if>
			1,
		</trim>
	</insert>

	<select id="selectByKey" resultType="com.surpass.mvc.system.bas.model.AppResourcesConfig"
		parameterType="java.lang.Long">
		select *
		from app_resources_config
		where id =
		#{id,jdbcType=BIGINT}
	</select>

	<update id="updateByKey" parameterType="com.surpass.mvc.system.bas.model.AppResourcesConfig">
		update app_resources_config 
		<set>
			<if test="name != null">
				name = #{name,jdbcType=VARCHAR},
			</if>
			<if test="level != null">
				level = #{level,jdbcType=INTEGER},
			</if>
			<if test="page != null">
				page = #{page,jdbcType=VARCHAR},
			</if>
			<if test="status != null">
				status = #{status,jdbcType=INTEGER},
			</if>
		</set>
		where id = #{id,jdbcType=BIGINT}
	</update>


</mapper>